{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "docker-build",
            "label": "docker-build",
            "platform": "node",
            "dockerBuild": {
                "dockerfile": "${workspaceFolder}/ms/Dockerfile",
                "context": "${workspaceFolder}/ms",
                "pull": true
            },
            "node": {
                "package": "${workspaceFolder}/ms/package.json"
            }
        },
        {
            "type": "docker-run",
            "label": "docker-run: release",
            "dependsOn": ["docker-build"],
            "platform": "node",
            "node": {
                "package": "${workspaceFolder}/ms/package.json"
            }
        },
        {
            "type": "docker-run",
            "label": "docker-run: debug",
            "dependsOn": ["docker-build"],
            "dockerRun": {
                "env": {
                    "DEBUG": "*",
                    "NODE_ENV": "development"
                }
            },
            "node": {
                "package": "${workspaceFolder}/ms/package.json",
                "enableDebugging": true
            }
        }
    ]
}
